                      <!-- メッセージ & ユーザーイメージ -->
                      <h4>
                        koniatsu
                        <small><i class="fa fa-clock-o"></i> 5 mins</small>
                      </h4>
                      <!-- The message -->
                      <p>うんこじゃない？</p>
                    </a>
                  </li>
                  <!-- end message -->
                </ul>
                <!-- /.menu -->
              </li>
              <li class="footer"><a href="#">See All Messages</a></li>
            </ul>
          </li>
          <!-- メッセージメニュー終わり -->

          <!-- お知らせ -->
          <li class="dropdown notifications-menu">
            <!-- Menu toggle button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-bell-o"></i>
              <span class="label label-warning">1111</span>
            </a>
            <!-- お知らせ欄のドロップダウン -->
            <ul class="dropdown-menu">
              <li class="header">1111のお知らせがあります</li>
              <li>
                <ul class="menu">
                  <li><!-- start notification -->
                    <a href="#">
                      <i class="fa fa-users text-aqua"></i> チームmetapokoniに誘われています
                    </a>
                  </li>
                </ul>
              </li>
              <li class="footer"><a href="#">View all</a></li>
            </ul>
            <!-- お知らせドロップダウンの終わり -->
          </li>
          <!-- お知らせ欄の終了 -->

          <!-- ユーザーアカウント部分 -->
          <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <!-- ユーザーイメージ -->
              <%= image_tag("user_img/sample_user_img.jpg", class:"user-image", alt: "User Image") %>
              <!-- ユーザー名 -->
              <span class="hidden-xs">meta713</span>
            </a>
            <ul class="dropdown-menu">
              <!-- ユーザーイメージ In メニュ- -->
              <li class="user-header">
                <%= image_tag("user_img/sample_user_img.jpg", class:"img-circle", alt: "User Image") %>
                <p>
                  meta713
                  <small>meta713@example.com</small>
                </p>
              </li>
              <!-- User Menu -->
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-6 text-center">
                    <a href="">グループ</a>
                  </div>
                  <div class="col-xs-6 text-center">
                    <a href="">お気に入り大学</a>
                  </div>
                </div>
              </li>
              <!-- User Menu Footer-->
              <li class="user-footer">
                <div class="pull-left col-xs-6 text-center">
                  <a href="#" class="btn btn-default btn-flat">プロフ編集</a>
                </div>
                <div class="pull-right col-xs-6 text-center">
                  <a href="#" class="btn btn-default btn-flat">ログアウト</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar user panel (optional) -->
      <div class="user-panel">
        <div class="pull-left image">
          <%= image_tag("user_img/sample_user_img.jpg", class:"img-circle", alt: "User Image") %>
        </div>
        <div class="pull-left info">
          <p>pokotsun</p>
          <!-- Status -->
          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu">
        <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
        <li class="active"><a href="#"><i class="fa fa-link"></i> <span>Link</span></a></li>
        <li><a href="#"><i class="fa fa-link"></i> <span>Another Link</span></a></li>
        <li class="treeview">
          <a href="#"><i class="fa fa-link"></i> <span>Multilevel</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
