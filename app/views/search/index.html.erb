  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
      <!-- Your Page Content Here -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Team MetaPoKoni
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; 2017 <a href="#">JpHacks</a>.</strong> All rights unreserved.
  </footer>

</div>
