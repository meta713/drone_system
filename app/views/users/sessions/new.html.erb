<%= stylesheet_link_tag "users/sessions", :media => "all" %>
<div style="padding-top:10%;">
  <div class="login-logo" style="color:#d2d6de;">
    <a href="#"><b>College</b>Share</a>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3" style="padding:3em;background-color: #fff;border-radius:8px">
      <h2 class="text-center">Log in</h2>
        <div class="form-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
            </div>

            <div class="field">
              <div class="row">
              <% if devise_mapping.rememberable? -%>
                <div class="col-sm-8 col-md-8">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="col-sm-4 col-md-4 text-right">
                <%= f.submit "Log in", class: "btn btn-info" %>
              </div>
            </div>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
