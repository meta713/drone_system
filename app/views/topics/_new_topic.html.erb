<!-- モーダル部分 -->
<div class="modal fade" id="modal-default">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">トピック編集</h4>
        </div>
        <% topic = Topic.new()  %>
        <%= form_for(topic, :url => { :controller => :topics, :action => :create}) do |f| %>
          <div class="modal-body text-left">
            <p class="text-muted small text-center" style="margin-bottom:0;">あなたの気になる話題をみんなに共有できます！</p>
            <div class="form-group">
              <%= f.label :title, "タイトル" %>
              <%= f.text_field :title, class: "form-control", type: "text", placeholder: "タイトル" %>
            </div>
            <div class="form-group">
              <%= f.label :content, "コンテンツ" %>
              <%= f.text_area :content, rows: 4, cols: 40, class: "form-control", placeholder: "タイトル" %>
            </div>
            <div class="form-group">
              <div class="attachment-block box collapsed-box" style="padding-bottom:0;">
                <div class="box-header">
                  <label for="exampleInputFile">写真</label>
                  <div class="box-tools">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                    </button>
                  </div>
                </div>
                <div class="box-body" style="padding-top:0;">
                  <input type="file" id="exampleInputFile">
                  <p class="help-block small">タイトル<input type="email" class="form-control input-sm" id="title" placeholder="タイトル"></p>
                  <p class="help-block small">コメント<textarea type="email" class="form-control input-sm" id="comment" placeholder="コメント"></textarea></p>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">キャンセル</button>
            <%= f.submit "投稿する", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
