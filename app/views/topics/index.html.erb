<div class="wrapper">

  <!-- header -->
  <%= render 'layouts/header', remote: true %>

  <!-- sidebar -->
  <%= render 'layouts/side_navbar', remote: true %>

  <!-- Main部分 -->
  <div class="content-wrapper">
    <!-- Main content header-->
    <section class="content-header">
      <h1>九州工業大学 情報工学部 飯塚キャンパス</h1>
      <ol class="breadcrumb">
        <li><a href="">一覧</a></li>
        <li>九州工業大学 情報工学部 飯塚キャンパス</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">
      <!-- Your Page Content Here -->
      <div id="search-root" class="row text-center">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h2 class="box-title">トピック一覧</h2>
              <div class="box-tools">
                <div class="form-group col-md-6">
                  <select class="form-control select2 select2-hidden-accessible sort-select-box" tabindex="-1" aria-hidden="true">
                    <option selected="selected">ソートする</option>
                    <option>五十音順</option>
                    <option>いいね順</option>
                    <option>投稿日時が早い順</option>
                    <option>投稿日時が遅い順</option>
                  </select>
                </div>
                <div class="input-group input-group-sm col-md-6" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search...">
                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default">
                      <i class="fa fa-search"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- box-header終わり -->
            <!-- テーブル部分 -->
            <div class="box-body">
              <%= render "topics_list"%>
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>

    <!-- /.content-wrapper -->

    <!-- hooter -->
    <%= render 'layouts/footer' %>
  </div>
  <!-- ./wrapper -->
