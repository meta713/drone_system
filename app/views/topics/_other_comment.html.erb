<div class="direct-chat-msg">
  <div class="direct-chat-info clearfix">
    <span class="direct-chat-name pull-left"><%= comment.user.name %></span>
    <span class="direct-chat-timestamp pull-right"><%= l comment.created_at, format: :exlong %></span>
  </div><!-- /.direct-chat-info -->
  <%= image_tag(comment.user.user_image, class: "direct-chat-img", alt: "User Image") %>
  <div class="direct-chat-text">
    <%= comment.content %>
  </div><!-- /.direct-chat-text -->
</div><!-- /.direct-chat-msg -->
